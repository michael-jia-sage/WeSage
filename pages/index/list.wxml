<!--pages/index/list.wxml-->
<view class='list-container'>
  <view class='list-top'>
    <view class='row'>
      <text>Filter: </text>
      <button bindtap="showAll">All</button>
      <button bindtap="showReceive">Receives</button>
      <button bindtap="showPayments">Payments</button>
    </view>
    <view class='row'>
      <text>Sort by: </text>
      <button bindtap="sortByDate">Date/Time</button>
      <button bindtap="sortByAmount">Amount</button>
      <button bindtap="sortByMemo">Memo</button>
    </view>
    <view class='row sync-row'>
      <view class='left'>
        <text>Selected X, sub-total Y</text>
      </view>
      <view class='right'>
        <button bindtap='syncSelected' type='primary'>Sync</button>
      </view>
    </view>
  </view>
  <view class='list-bottom'>
    <scroll-view class="item-wrapper">
      <view class="item-list" wx:for="{{transactionArray}}" wx:for-item="item" wx:for-index="index" wx:key="that">
        <view class="item-info {{item.style}}" data-index="{{index}}" id="{{item.id}}" bindtouchstart="touchS" bindtouchmove="touchM" bindtouchend="touchE" bindtap="itemDetail" style="left:{{item.left + 'rpx'}}">
            <view class="info-wrapper">
                <view class="info-left">
                    <view class="name">{{item.memo}}</view>
                    <view class="time">{{item.date_time}}</view>
                </view>
                <view class="info-right">
                  <view class="amount {{item.amount_style}}">{{item.amount}}</view>
                  <view class="trans_type">{{item.trans_type}}</view>
                </view>
            </view>
        </view>
        <view class="item-oper">
            <view class="oper-sync" bindtap="itemSync" data-index="{{index}}">View/Sync</view>
        </view>
      </view>
    </scroll-view>
  </view>
</view>
