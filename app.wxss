/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.section {
  border: solid 1rpx #ddd;
  background-color: #eee;
  border-radius: 5rpx;
  width: 80%;
  margin: 15rpx;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section__title {
  margin-bottom: 15rpx;
  border-bottom: 1rpx solid #ccc;
  width: 80%;
  align-self: left;
}

.amount{
    font-size: 40rpx;
    color: black;
    font-weight: 800;
}
.amount.plus{
  color: limegreen;
}
.amount.plus::before{
  content: '+';
}
.amount.minus{
  color: lightcoral;
}
.amount.minus::before{
  content: '-';
}